{
    "cSpell.words": [
        "autoloader",
        "bloginfo",
        "junaid",
        "phpcs",
        "untrailingslashit"
    ],

    // phpcs and phpcbf settings
    "phpcs.enable": true,
    "phpcs.standard": "WordPress",
    "phpcs.executablePath": "./vendor/bin/phpcs",
    "phpcs.composerJsonPath": "composer.json",

    "phpcbf.enable": true,
    "phpcbf.executablePath": "./vendor/bin/phpcbf",
    "phpcbf.documentFormattingProvider": true,
    "phpcbf.onsave": false,
    "phpcbf.standard": "WordPress",
}